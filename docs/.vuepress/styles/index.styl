html,
body {
    width: 100%;
    height: 100%;
    min-width: 1200px;
    min-height: 600px;
}
#app {
    width: 100%;
    height: 100%;
    .theme-container {
        width: 100%;
        height: 100%;
        .links {
            right: unset;
            left: 136px;
            font-size: 1rem;
            .nav-item {
                > a:not(.external):hover,
                a:not(.external).router-link-active {
                    color: #000;
                    border: 0;
                    margin-bottom: 0;
                    font-weight: bold;
                }
            }
        }
        .page,
        .home {
            padding: 4rem 2rem 0 20rem;
        }
        h1 {
            margin: 0;
            padding: 0;
        }
    }
    .no-sidebar {
        .page,
        .home {
            max-width: unset;
            height: calc(100% - 4rem);
            background: #f9faff;
            padding: 4rem 2rem 0;
            .theme-default-content {
                margin: 20px 0 0;
                padding: 0;
                max-width: unset;
                > *:first-child {
                    padding: 0;
                    margin: 0;
                }
            }
        }
        .home {
            background: #fff;
            img {
                max-width: 100%;
                max-height: 300px;
                margin: 0 auto;
            }
        }
    }
    .web-html-page,
    .web-html-box {
        .page {
            width: calc(100% - 320px);
            min-height: calc(100% - 64px);
            margin-left: 320px;
            padding: 4rem 0 0;
        }
    }
}